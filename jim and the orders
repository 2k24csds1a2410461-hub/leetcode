#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int customer_id;
    int delivery_time;
} Order;

int compare(const void *a, const void *b) {
    Order *orderA = (Order *)a;
    Order *orderB = (Order *)b;

    if (orderA->delivery_time == orderB->delivery_time) {
        return orderA->customer_id - orderB->customer_id;
    }
    return orderA->delivery_time - orderB->delivery_time;
}

int main() {
    int n;
    scanf("%d", &n);

    Order orders[n];
    for (int i = 0; i < n; i++) {
        int order_time, prep_time;
        scanf("%d %d", &order_time, &prep_time);
        orders[i].customer_id = i + 1;  // customer IDs start from 1
        orders[i].delivery_time = order_time + prep_time;
    }

    qsort(orders, n, sizeof(Order), compare);

    for (int i = 0; i < n; i++) {
        printf("%d ", orders[i].customer_id);
    }

    printf("\n");
    return 0;
}
